@using ND.MCJ.Framework;
@using ND.MCJ.Model
@model NC.MCJ.WebApi.Areas.Help.Models.DevModel
@{ ViewBag.Title = null; Layout = null;}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>接口调试</title>
    @Styles.Render("~/Content/style/", "~/Content/Jformat/")
    @Scripts.Render("~/bundles/script", "~/bundles/Jformat")
</head>
<body>
    <div class="col-md-10" style="padding-top: 50px;">
        <form class="form-horizontal">
            <div class="form-group">
                <label for="inputText3" class="col-sm-2 control-label">地址</label>
                <div class="col-sm-10">
                    <input type="text" name="action" class="form-control" placeholder="地址" value="@Model.Url" />
                </div>
            </div>
            <div class="form-group">
                <label for="inputText3" class="col-sm-2 control-label">参数</label>
                <div class="col-sm-10">
                    <textarea name="parameter" class="form-control" rows="3" placeholder="参数">@Model.Parma</textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="inputRadio3" class="col-sm-2 control-label">方式</label>
                <div class="col-sm-10">
                    <label class="radio-inline">
                        <input type="radio" name="method" id="inlineRadio1" @(Model.Method.ToLower() == "get" ? "checked='checked'" : "") value="get" />GET
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="method" id="inlineRadio2" @(Model.Method.ToLower() == "post" ? "checked='checked'" : "") value="post" />POST
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="method" id="inlineRadio3" @(Model.Method.ToLower() == "put" ? "checked='checked'" : "") value="put" />PUT
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="method" id="inlineRadio4" @(Model.Method.ToLower() == "delete" ? "checked='checked'" : "") value="delete" />DELETE
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label for="inputText3" class="col-sm-2 control-label">签名</label>
                <div class="col-sm-10">
                    <input type="text" name="sign" class="form-control" placeholder="签名" value="@Model.Sign" />
                </div>
            </div>
            <div class="form-group">
                <label for="" class="col-sm-2 control-label">平台</label>
                <div class="col-sm-2">
                    @Html.DropDownListFor(s => s.PlatformId, DataConvert.ToListItem<Platform>(), new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" class="btn btn-primary" data-loading-text="Loading" value="提 交" />
                    <label class="checkbox-inline">
                        <input type="checkbox" class="console" checked="checked" />显示控制
                    </label>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label for="inputText3" class="col-sm-2 control-label">响应</label>
                <input type="hidden" name="response"  />
                <div class="col-sm-10 response" data-json="@Model.Response">
                </div>
            </div>
        </form>
    </div>
</body>
</html>
